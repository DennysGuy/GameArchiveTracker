    %>
  </div>

  <div class="flex my-5">
    <div class="mr-24">
    <%= form.label :items_included, class: "font-bold mr-14" %>
  
    <%= form.select :items_included, 
    options_for_select(
        [['Closed In Box', 'closed in box'],  
        ['Box Only', 'box only'],
        ['Manual Only', 'manual only'], 
        ['Loose', 'loose'],
        ['Media and Box Only', 'media and box only'],
        ['Box and Manual Only', 'box and manual only'],
        ['Digital', 'digital']],
        selected: 'closed in box'
