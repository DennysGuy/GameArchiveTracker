<%= form_with(model: game, class: "contents") do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>
      <ul>
        <% game.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :game_art %>
    <%= form.file_field :game_art, class: "block px-3 py-2 mt-2" %>
    
  </div>

  <div class="flex my-5">
    <div class="mr-16">
      <%= form.label :title, class:"font-bold" %>
      <%= form.text_field :title, class: "block shadow  px-3 py-2 mt-2" %>
    </div>

    <div class="mr-14">
      <%= form.label :release_year, class:"font-bold" %>
      <%= form.number_field :release_year, class: "block px-3 py-2 mt-2 " %>
    </div> 

    <div class="">
      <%= form.label :series, class:"font-bold" %>
      <%= form.text_field :series, class: "block shadow px-3 py-2 mt-2" %>
    </div>
  </div>


  <div class="my-5 flex">
    <div class="mr-16">
      <%= form.label :publisher, class:"font-bold" %>
      <%= form.text_field :publisher, class: "block shadow px-3 py-2 mt-2" %>
    </div>

    <div class="mr-14">
      <%= form.label :developer, class:"font-bold" %>
      <%= form.text_field :developer, class: "block shadow px-3 py-2 mt-2" %>
    </div>

    <div class="my-5">
      <%= form.label :region, class: "font-bold mr-6" %>
      <%= form.select :region,
      options_for_select(
        [['NTSC-U', 'NTSC-U'],
        ['NTSC-J', 'NTSC-J'],
        ['NTSC-C', 'NTSC-C'],
        ['PAL', 'PAL']],
        selected: 'NTSC-U'
      )
      %>
    </div>
  </div>


