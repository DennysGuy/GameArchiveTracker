        ['Sony Playstation 5', 'Sony Playstation 5'],
        ['Sony PSP', 'Sony PSP'],
        ['Sony PS Vita', 'Sony PS Vita'],
        ['Microsoft Xbox', 'Microsoft Xbox'],
        ['Microsoft Xbox 360', 'Microsoft Xbox 360'],
        ['Microsoft Xbox One', 'Microsoft Xbox One'],
