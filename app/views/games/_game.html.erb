<div id="<%= dom_id game %>" class="flex " >
   
  <div class="p-8 mt-8 bg-indigo-200 rounded-md shadow-xl">
    <div class="flex justify-between mb-2 bg-white border border-gray-500 shadow-lg">
      <div class="flex"> 
        <div class="mt-4 text-5xl pt-4 pl-2 pb-2 font-bold">
        <%= game.title %> 
        </div>
        <div class="pl-2">
          <div class="mt-9 text-xl pt-4 pl-2 pb-2"> <%= game.release_year %>
        </div>
        </div>    
      </div>
 
      <div class="mt-14">
        <%= link_to "Edit item", edit_game_path(game), class: "rounded-lg px-2 inline-block text-blue-400 hover:text-blue-700 underline" %>
        <div class="inline-block ml-2">
          <%= button_to "Remove from collection", game, method: :delete, class: "rounded-lg  pr-5 text-blue-400 hover:text-blue-700 underline" %>
        </div>
      </div>
    </div>

    <div class="border border-gray-500  bg-white shadow-lg">
      <div class="mr-2 font-bold underline px-4 py-2">
        Collection Details
      </div>
      <div class="px-4 pb-4">
      (image of game coverart or physical item)
      <%= image_tag 'Wave_Race_64_Coverart.png', alt: 'Wave Race 64 Coverart', class: "border border-black"%>
      
      </div>
      <div class="flex px-4 mb-6">
        <div class="flex flex-col mr-10 text-lg">
          <div class="flex">
            <strong class="font-medium mr-2 mb-1">Purchased on:</strong>
            <%= game.date_purchase %>
            <strong class="font-medium mx-2 mb-1">for</strong>$<%= game.purchased_price %>
          </div>

          <div class="flex">
            <strong class="block font-medium mr-2 mb-1">Included:</strong>
            <%= game.items_included %>
          </div>

        </div>

        <div class="flex flex-col mr-10 text-lg">
          <div class="flex">
            <strong class="font-medium mr-2 mb-1">Quantity:</strong>
            <%= game.quantity %>
          </div>

          <div class="flex">
            <strong class="font-medium mr-2 mb-1">Condition:</strong>
            <%= game.condition %>
          </div>
        </div>
      </div>
    </div>

    <div class="flex mb-5 text-xl">

    </div>

    <div class="border border-gray-500 bg-white shadow-lg">
      <div class="flex justify-between px-6 py-4 ">
        <div class= "flex">
          <div class="mr-2 font-bold underline">
            Game Details
          </div>
          <text class="text-sm  text-blue-400 underline hover:cursor-pointer hover:text-blue-700">
            archive page
          </text>        
        </div>
  
      </div>
      <div class="flex p-4">
        
        <div class="flex flex-col ml-2 mr-10 text-lg">
          <div class="flex">
            <strong class="font-medium mb-4 mr-2">Platform:</strong>
            <%= game.platform %>
          </div>
          
          <div class="flex">
            <strong class="font-medium mb-1 mr-2">Series:</strong>
            <%= game.series %>
          </div>
        </div>

        <div class="flex flex-col mr-10 text-lg">
          <div class="flex">
            <strong class="block font-medium mb-4 mr-2">Publisher:</strong>
            <%= game.publisher %>
          </div>
          <div class="flex">
            <strong class="block font-medium mr-2">Developer:</strong>
            <%= game.developer %>
          </div>
        </div>

        <div class="flex flex-col mr-5 text-lg">
          <div class="flex">
            <strong class="block font-medium mb-4 mr-2">Genre:</strong>
            <%= game.genre %>
          </div>
          <div class="flex">
            <strong class="block font-medium mr-2">Region:</strong>
            <%= game.region %>
          </div>   
        </div>
      </div>
      <p class="p-6">
        <strong class="block font-medium mb-4">Personal Description:</strong>
        <%= game.description %>
      </p>
    </div>
    
  </div>
</div>
